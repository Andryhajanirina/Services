<div class="container">
<!-- < %= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| % > -->
<%= form_tag do %>
  <h2>Entrer l'URL : https://coinmarketcap.com/all/views/all/</h2>
  <br>
   <div class="row">
      <div class="col-sm-12">
         <div class="form-element">
            <label>URL</label>
            <input type="text" name="url_base" id="url_base" class="form-control">
         </div>
      </div>
   </div>
  <br>
  <div class="actions">
    <div class="form-element">
      <center><input type="submit" name="enregistrer" id="enregistrer" value="Enregistrer" class="btn btn-outline-success"></center>
    </div>
  </div>
<% end %>

</div>


<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Currency name</th>
                <th scope="col">Currency price</th>
            </tr>
        </thead>
        <tbody>
            <% @cours_crypto.each do |element| %>
            <tr class="table-active">
                <td><%= element.name %></td>
                <td><%= element.price %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>